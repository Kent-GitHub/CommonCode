<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <Button
        android:id="@+id/seekbar_btn_minus"
        android:layout_width="42px"
        android:layout_height="42px"
        android:layout_centerVertical="true"
        android:background="@drawable/seekbar_reduce_btn"/>

    <Button
        android:id="@+id/seekbar_btn_add"
        android:layout_width="42px"
        android:layout_height="42px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/seekbar_add_btn"/>

    <SeekBar
        android:id="@+id/seekbar_adjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/seekbar_btn_minus"
        android:layout_toStartOf="@id/seekbar_btn_add"
        android:maxHeight="8px"
        android:minHeight="8px"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress_bg"
        android:splitTrack="false"
        android:thumb="@drawable/thumb_selector"/>

</RelativeLayout>