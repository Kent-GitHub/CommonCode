<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dialog_content_mgb"
        android:layout_marginEnd="@dimen/dialog_content_mge"
        android:layout_marginStart="@dimen/dialog_content_mgs"
        android:layout_marginTop="@dimen/dialog_content_mgt"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_body_ts"/>

    <FrameLayout
        android:id="@+id/dialog_custom_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dialog_content_mgb">

    </FrameLayout>

    <Button
        android:id="@+id/dialog_ok_btn"
        style="@style/dialog_ok_btn_style"
        android:layout_width="@dimen/dialog_btn_w"
        android:layout_height="@dimen/dialog_btn_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dialog_btn_mgb"
        android:layout_marginEnd="@dimen/dialog_btn_mge"/>


    <Button
        android:id="@+id/dialog_cancel_btn"
        style="@style/dialog_cancel_btn_style"
        android:layout_width="@dimen/dialog_btn_w"
        android:layout_height="@dimen/dialog_btn_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dialog_btn_mgb"
        android:layout_marginStart="@dimen/dialog_btn_mgs"/>

    <Button
        android:id="@+id/dialog_center_btn"
        style="@style/dialog_ok_btn_style"
        android:layout_width="@dimen/dialog_btn_w"
        android:layout_height="@dimen/dialog_btn_h"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dialog_btn_mgb"
        android:visibility="gone"/>


</RelativeLayout>