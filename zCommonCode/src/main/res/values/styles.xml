<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog_My" parent="@android:style/Theme.Material.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="dialog_divide_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#666666</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!--DIALOG的OK按钮-->
    <style name="dialog_ok_btn_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">@string/ok_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_ok_btn_bg</item>
    </style>

    <!--DIALOG的OK按钮-->
    <style name="dialog_ok_btn_style_simple">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">@string/ok_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <!--DIALOG的CANCEL按钮-->
    <style name="dialog_cancel_btn_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:textColor">@color/dialog_cancel_text_color</item>
        <item name="android:text">@string/cancel_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_cancel_btn_bg</item>
    </style>

    <string name="ok_btn">确定</string>
    <string name="cancel_btn">取消</string>
</resources>