<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item android:id="@android:id/background">
                <shape>
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/color_seekbar_normal"/>
                </shape>
            </item>

            <item android:id="@android:id/progress">
                <clip>
                    <shape>
                        <corners android:radius="3dp"/>
                        <solid android:color="@color/color_seekbar_progress"/>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item android:id="@android:id/background">
                <shape>
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/color_seekbar_disable_normal"/>
                </shape>
            </item>

            <item android:id="@android:id/progress">
                <clip>
                    <shape>
                        <corners android:radius="3dp"/>
                        <solid android:color="@color/color_seekbar_disable_progress"/>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>
</selector>